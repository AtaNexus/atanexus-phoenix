# Arize Phoenix GCP Deployment Configuration
# Copy this file to phoenix-config.local.env and customize for your deployment

# GCP Configuration
PROJECT_ID=your-gcp-project-id
INSTANCE_NAME=atanexus-phoenix-server
ZONE=us-central1-a
MACHINE_TYPE=e2-standard-2
DISK_SIZE=20GB

# Phoenix Configuration
PHOENIX_PORT=6006
PHOENIX_VERSION=latest

# Backup Configuration
BACKUP_BUCKET=your-gcp-project-id-phoenix-backups

# Optional: Custom startup script path
# STARTUP_SCRIPT=startup-script.sh

# Optional: Additional environment variables for Phoenix container
# PHOENIX_ENV_VARS="-e PHOENIX_SECRET=your-secret -e PHOENIX_WORKING_DIR=/app"

# Optional: Custom Docker image
# PHOENIX_IMAGE=arizephoenix/phoenix

# Optional: Data persistence
# PHOENIX_DATA_DISK_SIZE=50GB
# PHOENIX_BACKUP_ENABLED=true

# Optional: Custom domain configuration
# PHOENIX_DOMAIN=your-domain.com
# PHOENIX_URL=https://your-domain.com 